---
import { Icon } from "astro-icon";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Banner from "@components/banner.astro";
import { getEntry } from "astro:content";

const businessEntry = await getEntry("businessinfo", "entry");
const businessDetails = businessEntry.data;
---

<Layout title="Contact">
  <Banner bannerTitle="contact" />
  <Container>
    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl my-16">
      <div>
        <h2 class="font-medium text-2xl">Opening Hours</h2>
        {
          businessDetails.openingHours.map((day) => (
            <>
              <div class="flex items-center mt-2 space-x-2">{day.details}</div>
            </>
          ))
        }
      </div>
      <div>
        <div class="flex flex-col justify-center items-start h-full">
          <div class="flex items-center p-3">
            <div
              class="h-full aspect-square bg-custom-blue sketch flex justify-center items-center">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="white"
                class="w-6 h-6">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
                ></path>
              </svg>
            </div>
            <div class="px-2">
              <h6>Phone</h6>
              <p class="whitespace-nowrap">
                <a
                  href={"tel:" + businessDetails.phoneLink}
                  class="text-custom-green">{businessDetails.phone}</a
                >
              </p>
            </div>
          </div>

          <div class="flex items-center p-3">
            <div
              class="h-full aspect-square bg-custom-yellow sketch flex justify-center items-center">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
                ></path>
              </svg>
            </div>
            <div class="px-2">
              <h6>Email</h6>
              <p class="whitespace-nowrap">
                <a
                  href={"mailto:" + businessDetails.email}
                  class="text-custom-green">{businessDetails.email}</a
                >
              </p>
            </div>
          </div>

          <div class="flex items-center p-3">
            <div
              class="h-full aspect-square bg-custom-green sketch flex justify-center items-center">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="white"
                class="w-6 h-6">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"
                ></path>
              </svg>
            </div>
            <div class="px-2">
              <h6>Location</h6>
              <p class="whitespace-nowrap">
                <a href={businessDetails.addressLink} class="text-custom-green"
                  >{businessDetails.address}</a
                >
              </p>
            </div>
          </div>

          <div class="flex items-center p-3">
            <div
              class="h-full aspect-square bg-custom-pink sketch flex justify-center items-center">
              <svg
                class="w-8 h-8 stroke-white"
                viewBox="0 -0.5 25 25"
                fill="none"
                xmlns="http://www.w3.org/2000/svg">
                <path
                  fill-rule="evenodd"
                  clip-rule="evenodd"
                  d="M15.5 5H9.5C7.29086 5 5.5 6.79086 5.5 9V15C5.5 17.2091 7.29086 19 9.5 19H15.5C17.7091 19 19.5 17.2091 19.5 15V9C19.5 6.79086 17.7091 5 15.5 5Z"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
                <path
                  fill-rule="evenodd"
                  clip-rule="evenodd"
                  d="M12.5 15C10.8431 15 9.5 13.6569 9.5 12C9.5 10.3431 10.8431 9 12.5 9C14.1569 9 15.5 10.3431 15.5 12C15.5 12.7956 15.1839 13.5587 14.6213 14.1213C14.0587 14.6839 13.2956 15 12.5 15Z"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
                <rect
                  x="15.5"
                  y="9"
                  width="2"
                  height="2"
                  rx="1"
                  transform="rotate(-90 15.5 9)"
                  fill="#000000"></rect>
                <rect
                  x="16"
                  y="8.5"
                  width="1"
                  height="1"
                  rx="0.5"
                  transform="rotate(-90 16 8.5)"
                  stroke-linecap="round"></rect>
              </svg>
            </div>
            <div class="px-2">
              <h6>Instagram</h6>
              <p class="whitespace-nowrap">
                <a
                  href={businessDetails.instagramLink}
                  class="text-custom-green">{businessDetails.instagram}</a
                >
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Container>
</Layout>
