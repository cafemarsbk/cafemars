---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import { Image } from "@astrojs/image/components";

const galleryItems = await getCollection("gallery");

console.log(galleryItems);
---

<Layout title={galleryItems[0].data.title}>
  <div
    class="flex justify-center items-center h-64 bg-pasta-rain animate-pasta-rain mb-12">
    <h1 class="text-6xl md:text-8xl">Gallery</h1>
  </div>
  <Container>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-16 mb-8">
      {
        galleryItems[0].data.photoentry.map((photo) => (
          <>
            <div class="col-span-1">
              <Image
                src={photo.photo}
                width={600}
                aspectRatio="9:16"
                alt={photo.description}
              />
            </div>
          </>
        ))
      }
    </div>
  </Container>
</Layout>
